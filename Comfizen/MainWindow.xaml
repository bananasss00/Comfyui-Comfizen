                                                                        <DataTrigger.ExitActions>
                                                                            <BeginStoryboard>
                                                                                <Storyboard>
                                                                                    <DoubleAnimation
                                                                                        Storyboard.TargetProperty="Opacity"
                                                                                        To="0" Duration="0:0:0.3" />
