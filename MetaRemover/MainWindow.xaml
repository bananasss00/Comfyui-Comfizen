<!-- File: MainWindow.xaml -->
<Window x:Class="MetaRemover.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Comfizen Metadata Remover" Height="300" Width="500"
        WindowStartupLocation="CenterScreen" MinHeight="250" MinWidth="400"
        AllowDrop="True"
        DragOver="Window_DragOver"
        Drop="Window_Drop">
    <Grid Margin="15">
        <!-- 
        The Rectangle is used to draw the dashed border effect.
        The Border control itself doesn't have a StrokeDashArray property.
        -->
        <Rectangle Stroke="{StaticResource TextSecondaryBrush}"
                   StrokeThickness="2"
                   StrokeDashArray="4 4"
                   RadiusX="5"
                   RadiusY="5"/>

        <!-- The TextBlock is placed on top of the Rectangle. -->
        <TextBlock Text="Drag and Drop Files Here" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   FontSize="18" 
                   Foreground="{StaticResource TextSecondaryBrush}"
                   IsHitTestVisible="False"/> <!-- This prevents the text from blocking drop events -->
    </Grid>
</Window>